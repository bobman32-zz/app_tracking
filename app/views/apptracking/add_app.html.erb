
<% if @new_app.errors.any? %>
    <% @new_app.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
    <% end %>
  <% else %>


  <% if @new_user_app_join.errors.any? %>
      <% @new_user_app_join.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
      <% end %>
    <% else %>

    <% if @new_user_app_join2.errors.any? %>
        <% @new_user_app_join2.errors.full_messages.each do |message| %>
        <div class="alert alert-dismissable alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= message %>
        </div>
        <% end %>
    <% end %>
  <% end %>
<% end %>

<div class="page-header">
  <h3>
    Track a New App
  </h3>
  <p> App package names/IDs can be found in the URL of the Google Play/ITunes app page </p>
</div>


<form class="form-horizontal" action="/add_android" onClick="ga('send', 'event', 'Android', 'add', '');">
  <div class="form-group">
    <label for="androidapp" class="col-sm-2 control-label">Android App ID</label>
    <div class="col-sm-4">
      <input type="text" name="androidid" class="form-control" id="androidid" placeholder="ex. com.orbitz">

      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>



<form class="form-horizontal" action="/add_ios" onClick="ga('send', 'event', 'iOS', 'add', '');">
  <div class="form-group">
    <label for="iosapp" class="col-sm-2 control-label">iOS App ID</label>
    <div class="col-sm-4">
      <input type="text" name="iosid" class="form-control"  id="iosid" placeholder="ex. 3242354325">


      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>
